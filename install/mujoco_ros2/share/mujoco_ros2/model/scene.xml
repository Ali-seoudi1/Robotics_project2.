<mujoco model="ur5e_scene">
  <!-- Include existing robot model -->
  <include file="ur5e.xml"/>

  <statistic center="0.3 0 0.4" extent="0.8"/>

  <!-- Visual settings -->
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <!-- Assets for textures -->
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <!-- World Body -->
  <worldbody>
    <!-- Floor -->
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Treadmill: Positioned next to the robot -->
    <body name="treadmill" pos="2 0 0.1">
      <geom name="treadmill_surface" type="box" size="2 0.5 0.1" rgba="0.5 0.5 0.5 1"/>
      <!-- No slide joint: We will move the treadmill manually in code -->
    </body>

    <!-- Multiple boxes on the treadmill -->
    <body name="white_box_1" pos="1.5 0 0.15">
      <geom name="white_box_geom_1" type="box" size="0.1 0.1 0.1" rgba="1 1 1 1"/>
    </body>

    <body name="black_box_1" pos="1 0 0.15">
      <geom name="black_box_geom_1" type="box" size="0.1 0.1 0.1" rgba="0 0 0 1"/>
    </body>

    <body name="white_box_2" pos="0.5 0 0.15">
      <geom name="white_box_geom_2" type="box" size="0.1 0.1 0.1" rgba="1 1 1 1"/>
    </body>

    <body name="black_box_2" pos="0 0 0.15">
      <geom name="black_box_geom_2" type="box" size="0.1 0.1 0.1" rgba="0 0 0 1"/>
    </body>

    <!-- Sorting areas: Left for white boxes, right for black boxes -->
    <body name="sorting_area_white" pos="5 1 0.1">
      <geom name="sorting_area_white_geom" type="box" size="0.5 0.5 0.05" rgba="0.9 0.9 1 1"/>
    </body>

    <body name="sorting_area_black" pos="5 -1 0.1">
      <geom name="sorting_area_black_geom" type="box" size="0.5 0.5 0.05" rgba="0.1 0.1 0.1 1"/>
    </body>

    <!-- Light source -->
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
  </worldbody>

  <!-- Set camera view -->
  <visual>
    <global azimuth="135" elevation="-20"/>
  </visual>
</mujoco>
